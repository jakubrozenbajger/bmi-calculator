<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pl.rozen.swim.BMICalculator">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.BMIActivity"
            android:label="@string/title_activity_bmi_calculator">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.AboutActivity"
            android:label="@string/title_activity_about"
            android:parentActivityName=".activities.BMIActivity"
/>
        <activity
            android:name=".activities.AboutScrollingActivity"
            android:label="@string/title_activity_about_scrolling"
            android:parentActivityName=".activities.BMIActivity"
/>
    </application>

</manifest> <!-- android:configChanges="orientation|keyboardHidden" -->
